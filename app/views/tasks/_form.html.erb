<%= form_with model: @task, class: "mt-4" do |f| %>
  <div class="mb-3">
    <%= f.label :title, class: "form-label" %>
    <%= f.text_field :title, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :details, class: "form-label" %>
    <%= f.text_field :details, class: "form-control" %>
  </div>

  <div class="form-check mb-3">
    <%= f.check_box :completed, class: "form-check-input", id: "task_completed" %>
    <%= f.label :completed, class: "form-check-label", for: "task_completed" %>
  </div>

  <%= f.submit "Save", class: "btn btn-success" %>
<% end %>
